<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ubicacion tiempo real</title>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
</head>
<body>
    <div id="map-template"></div>
    
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" ></script>
</body>
</html>
<style>
    #map-template {
    top: 0;
    width: 100%;
    height: 100%;
    position: absolute;
}
body{
    margin: 0;
    padding: 0;
    font-family: 'Roboto', sans-serif;
    background: #f2f2f2;
}
</style>
<script>
    var map = L.map('map-template').setView([51.505, -0.09], 13);
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        maxZoom: 19,
    }).addTo(map);
    const marcker = L.marker([51.5, -0.09]);
    marcker.addTo(map);
    map.locate({enableHighAccuracy: true});
    map.on('locationfound', (e) => {
        console.log(e);
        marcker.setLatLng(e.latlng);
        marcker.addTo(map);
        map.setView(e.latlng, 13);
        marcker.bindPopup('Tu ubicacion actual');
    });
</script>